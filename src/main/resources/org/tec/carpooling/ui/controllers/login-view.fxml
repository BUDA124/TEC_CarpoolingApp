               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <AnchorPane prefHeight="698.0" prefWidth="644.0" style="-fx-border-radius: 30;">
         <children>
            <Text layoutX="319.0" layoutY="87.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="alata-text" text="Log-In" wrappingWidth="210.0">
               <font>
                  <Font name="SansSerif Bold" size="48.0" />
               </font>
            </Text>
            <PasswordField fx:id="TF_password" layoutX="17.0" layoutY="269.0" prefHeight="40.0" prefWidth="780.0" promptText="Password" styleClass="adlam-text">
