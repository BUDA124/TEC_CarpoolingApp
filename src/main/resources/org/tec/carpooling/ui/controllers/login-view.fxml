<SplitPane dividerPositions="0.25" prefHeight="700.0" prefWidth="1100.0" stylesheets="@../../../../../css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.tec.carpooling.ui.controllers.LoginController">

   <items>
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="698.0" prefWidth="281.0" style="-fx-background-color: #081a51;">
         <children>
            <Text fill="WHITE" layoutX="25.0" layoutY="165.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="adlam-text" text="Share your ride.">
               <font>
                  <Font name="SansSerif Bold" size="25.0" />
               </font>
            </Text>
            <Text fill="WHITE" layoutX="25.0" layoutY="195.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="adlam-text" text="Secure rides within" textAlignment="JUSTIFY">
               <font>
                  <Font name="SansSerif Bold" size="25.0" />
               </font>
            </Text>
            <Text fill="WHITE" layoutX="25.0" layoutY="225.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="adlam-text" text="your community.">
               <font>
                  <Font name="SansSerif Bold" size="25.0" />
               </font>
            </Text>
            <ImageView fitHeight="210.0" fitWidth="350.0" layoutX="-40.0" layoutY="350.0" pickOnBounds="true" preserveRatio="true">
