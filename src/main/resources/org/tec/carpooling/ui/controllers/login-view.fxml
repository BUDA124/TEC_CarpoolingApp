                  <Font size="18.0" />
               </font>
            </PasswordField>
            <Text fontSmoothingType="LCD" layoutX="260.0" layoutY="440.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="adlam-text" text="Don't have an account?">
